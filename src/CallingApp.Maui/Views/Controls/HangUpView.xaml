<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="CallingApp.Maui.Views.Controls.HangUpView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CallingApp.Maui.Views.Controls">

    <Grid>
        <Ellipse x:Name="ellipse"
                 Stroke="{StaticResource HangUpButtonBrush}"/>

        <GraphicsView x:Name="graphicsView" BackgroundColor="Transparent" SizeChanged="GraphicsViewSizeChanged"
                      HorizontalOptions="Fill" VerticalOptions="Fill"
                      InputTransparent="True"/>

        <Grid.GestureRecognizers>
            <PanGestureRecognizer PanUpdated="PanUpdated"/>
            <TapGestureRecognizer Tapped="Tapped"/>
        </Grid.GestureRecognizers>
    </Grid>
</ContentView>